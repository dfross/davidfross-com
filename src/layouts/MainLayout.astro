---
import GoogleAnalytics from '../components/GoogleAnalytics.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../constants'
import '@fontsource/ibm-plex-sans/200.css'
import '@fontsource/ibm-plex-sans/400.css'
import '@fontsource/ibm-plex-sans/700.css'
const { PAGE_TITLE = 'Personal Website of David Fross' } = Astro.props

interface Props {
	PAGE_TITLE: string
}
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<GoogleAnalytics />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<title>{SITE_TITLE} - {PAGE_TITLE}</title>
	</head>
	<body
		class="mx-auto flex h-full max-w-screen-md flex-col bg-neutral-900 bg-[url('/bg.webp')] bg-cover p-9 pb-0 text-neutral-200">
		<main class="flex h-full flex-grow flex-col justify-center">
			<slot />
		</main>
		<footer>
			<p class="text-balance py-9 text-sm tracking-wide text-neutral-400 md:text-pretty">
				&copy; 2024 David Fross. All rights reserved. Created in Fulshear, TX.
			</p>
		</footer>
	</body>
</html>
<script is:inline type="text/partytown">
	const animateElements = document.querySelectorAll('.animate')
	animateElements.forEach((element, index) => {
		setTimeout(() => {
			element.classList.add('show')
		}, index * 100)
	})
</script>
<style is:global>
	.animate {
		opacity: 0;
		translate: 0 -0.5rem;
		transition: 1000ms cubic-bezier(0.68, -0.55, 0.265, 1.55);
	}
	.animate.show {
		opacity: 1;
		translate: 0 0;
	}
</style>
