---
import '../styles/global.css'
import GoogleAnalytics from '../components/GoogleAnalytics.astro'
import { AstroFont } from 'astro-font'
import { SITE_TITLE, SITE_DESCRIPTION } from '../constants'
const { PAGE_TITLE = 'Hello. I am David Fross - Designer & Developer.' } = Astro.props

interface Props {
	PAGE_TITLE: string
}
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<AstroFont
			config={[
				{
					src: [],
					name: 'IBM Plex Sans',
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@200;400;700&display=swap&subset=latin',
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'sans-serif',
				},
			]}
		/>
		<title>{SITE_TITLE} - {PAGE_TITLE}</title>
		<GoogleAnalytics />
	</head>
	<body class="mx-auto flex h-full max-w-screen-md flex-col bg-neutral-900 bg-[url('/bg.webp')] bg-cover p-9 pb-0 text-neutral-200">
		<a href="#main-content" class="sr-only focus:not-sr-only">Skip to content</a>
		<main id="main-content" role="main" class="flex h-full flex-grow flex-col justify-center">
			<slot />
		</main>
		<footer role="contentinfo">
			<p class="py-9 tracking-wide text-balance text-neutral-400 md:text-pretty">&copy; 2025 David Fross. All rights reserved.</p>
		</footer>
	</body>
</html>
