---
import GoogleAnalytics from '../components/GoogleAnalytics.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../constants'
import '@fontsource/ibm-plex-sans/200.css'
import '@fontsource/ibm-plex-sans/400.css'
import '@fontsource/ibm-plex-sans/700.css'
const { title = 'Personal Website of David Fross' } = Astro.props

interface Props {
	title: string
}
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<title>{SITE_TITLE} - {title}</title>
	</head>
	<body
		class="mx-auto flex h-full max-w-screen-md flex-col bg-neutral-900 bg-[url('/lofi-selfie-bg.png')] bg-cover p-9 pb-0 text-neutral-200">
		<main class="flex-grow">
			<slot />
		</main>
		<footer class="py-9">
			<p class="text-balance text-sm tracking-wide text-neutral-400 md:text-pretty">
				&copy; 2024 David Fross. All rights reserved. Created in Fulshear, TX.
			</p>
		</footer>
		<GoogleAnalytics />
	</body>
</html>
