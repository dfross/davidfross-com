---
import MainLayout from '../layouts/MainLayout.astro'
---

<MainLayout PAGE_TITLE="404 - Page Not Found">
	<h1 class="leading-none font-bold tracking-tight uppercase" style="font-size: clamp(3.05rem, 6.06vi + 1.54rem, 6.39rem);">
		404 &mdash; <br /> Page Not Found
	</h1>
	<p class="mt-6 text-xl text-neutral-300">Sorry, the page you're looking for doesn't exist.</p>
	<a href="/" class="mt-9 inline-block underline hover:text-neutral-400 focus:outline-2 focus:outline-offset-2 focus:outline-white">
		&larr; Return Home
	</a>
</MainLayout>
